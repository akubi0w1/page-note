{
  "name": "PageNote",
  "description": "page note.",
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["src/background/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "src/popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [
        "src/assets/css/all.min.css",
        "src/assets/css/newNote.css"
      ],
      "js": ["src/content/contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    "src/assets/css/all.min.css",
    "src/assets/webfonts/*"
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}